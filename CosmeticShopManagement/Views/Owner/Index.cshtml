@model IEnumerable<Owner>

@{
	ViewData["Title"] = "List of Owner";

}

<div class="row">
	<div class="col-md-8 offset-md-2">

		<table>
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.OwnerPicture)</th>
					<th>@Html.DisplayNameFor(model => model.OwnerName)</th>
					<th>@Html.DisplayNameFor(model => model.Bio)</th>
					<th>Owner</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src="@item.OwnerPicture" alt="@item.OwnerName" style="max-width: 150px"/>
						</td>
						<td class ="align-middle">
							@Html.DisplayFor(modelIteam => item.OwnerName)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelIteam => item.Bio)
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
							<a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
							<a class="btn btn-outline-danger"><i class="bi bi-trash"></i>Delete</a>
						</td>

					</tr>

				}
			</tbody>
		</table>
	</div>
</div>