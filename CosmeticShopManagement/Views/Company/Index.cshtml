@model IEnumerable<CosmeticShopManagement.Models.Company>

@{
	ViewData["Title"] = "List of Company";

}

<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table">
			<thead>
				<tr class="table-center">
					<th>@Html.DisplayNameFor(model => model.CompanyPicture)</th>
					<th>@Html.DisplayNameFor(model => model.CompanyName)</th>
					<th>@Html.DisplayNameFor(model => model.Bio)</th>
					<th>Company</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src="@item.CompanyPicture" alt="@item.CompanyName" style="max-width: 150px" />
						</td>
						<td class ="align-middle">
							@Html.DisplayFor(modelIteam => item.CompanyName)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelIteam => item.Bio)
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
							<a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
							<a class="btn btn-outline-danger text-white"><i class="bi bi-trash"></i>Delete</a>
						</td>

					</tr>

				}
			</tbody>
		</table>
	</div>
</div>