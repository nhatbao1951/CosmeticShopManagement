@model IEnumerable<CosmeticShopManagement.Models.Product>

@{
	ViewData["Title"] = "List of Products";

}

<div class="row">
	@foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.ProductName
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.ProductId"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ProductPicture" width="100%" alt="@item.ProductName">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>Products: </b>@item.ProductName</p>
                            <p class="card-text"><b>Type: </b>@item.Type</p>
                            <p class="card-text"><b>ExpiryDate: </b>@item.ExpiriedDate</p>
                            <p class="card-text ">
                                <b>Status: </b>
                                @if (item.amount == 0)
                                {
                                    <span class="badge bg-success text-white">EXPIRED</span>
                                }
                                else 
                                {
                                    <span class="badge bg-danger text-white">AVAILABLE</span>
                                }
                                
                            </p>

                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    }
</div>